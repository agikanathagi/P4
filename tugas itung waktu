#include <iostream> // Define iostream
using namespace std; // menggunakan std
int main()
{
    int JumlahDetik;
    int Jam;
    int Menit;
    int Detik;
    int Sisa;

    cout<<"Berapakah waktunya tong? "<<endl;
    cin >> JumlahDetik;

  Jam = JumlahDetik / 3600;
  Sisa = JumlahDetik % 3600;
  Menit = Sisa / 60;
  Detik = Sisa % 60;
  
  Detik = Detik + 1;

    cout<<Jam<<"jam"<<endl;
    cout<<Menit<<" menit"<<endl;
    cout<<Detik<<" detik"<<endl;


return 0;
}
